<!-- ========== CUSTOM STYLES FOR HEADER ========== -->
<style>
@media (min-width: 992px) {
    /* 1. Style for the moved menu button */
    #menu_toggle_button.rm-btn.primary {
        background-color: #006B50;
        border-color: #006B50;
    }

    #menu_toggle_button.rm-btn.primary:hover {
        background-color: #00523e; /* A slightly darker hover color */
    }

    /* Bugfix for toggle button icons */
    #menu_toggle_button .close-icon {
        display: none;
    }
    #menu_toggle_button.active .close-icon {
        display: inline-block;
    }
    #menu_toggle_button.active .catalog-icon {
        display: none;
    }
    
    /* 2. Push account links to the far right in Nav */
    .top-nav-account-links {
        margin-left: auto;
    }
    
    /* 3. Add some space between button and info links */
    .top-nav-info-list {
        margin-left: 20px;
    }

    /* 4. Increase logo size */
    #logo img {
        max-height: 55px !important;
        width: auto !important;
    }

    /* 5. Style for login/account link in Header */
    .header-account .login-link {
        color: #000000 !important;
        text-decoration: none !important;
        font-weight: 500;
        cursor: pointer;
    }
    .header-account .login-link:hover {
        color: #006B50 !important; /* using the button color for hover */
    }
    .header-account .login-link img {
        margin-right: 8px;
    }

    /* 6. Style for "Адреси магазинів" link */
    .rm-header-phones-list .shops-address-link {
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
        color: #333;
    }
    .rm-header-phones-list .shops-address-link:hover {
        color: #006B50;
        text-decoration: underline;
    }
}
</style>
<!-- ========== END OF CUSTOM STYLES ========== -->
</head>
<body>
{% if oct_analytics_googletm_code is defined and oct_analytics_googletm_code is not empty %}
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ oct_analytics_googletm_code }}" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
{% endif %}
{% if oct_bar_data.status is defined and oct_bar_data.status %}
<div class="oct-fixed-bar fixed-{{ bar_position }} d-none d-lg-block">
    {% if oct_bar_data.show_cart is defined and oct_bar_data.show_cart %}
    <div onclick="{% if oct_popup_cart_status is defined and oct_popup_cart_status %}octPopupCart();{% else %}location = '{{ shopping_cart }}';{% endif %}" class="oct-fixed-bar-item oct-fixed-bar-item-cart" title="{{ fixed_bar_cart }}">
        <img src="{{ base}}catalog/view/theme/oct_remarket/img/sprite.svg#include--fixed-bar-cart" alt="{{ fixed_bar_cart }}" width="24" height="24">
        <span class="oct-fixed-bar-quantity oct-fixed-bar-quantity-cart">{{ cart_total_bar }}</span>
    </div>
    {% endif %}
    {% if oct_bar_data.show_compare is defined and oct_bar_data.show_compare %}
    <a href="{{ compare_link }}" class="oct-fixed-bar-item oct-fixed-bar-item-compare" title="{{ fixed_bar_compare }}">
        <img src="{{ base}}catalog/view/theme/oct_remarket/img/sprite.svg#include--fixed-bar-compare" alt="{{ fixed_bar_compare }}" width="24" height="24">
        <span class="oct-fixed-bar-quantity oct-fixed-bar-compare-quantity">{{ compare_total }}</span>
    </a>
    {% endif %}
    {% if oct_bar_data.show_wishlist is defined and oct_bar_data.show_wishlist %}
    <a href="{{ wishlist_link }}" class="oct-fixed-bar-item oct-fixed-bar-item-wishlist" title="{{ fixed_bar_wishlist }}">
        <img src="{{ base}}catalog/view/theme/oct_remarket/img/sprite.svg#include--fixed-bar-wishlist" alt="{{ fixed_bar_wishlist }}" width="24" height="20">
        <span class="oct-fixed-bar-quantity oct-fixed-bar-wishlist-quantity">{{ wishlist_total }}</span>
    </a>
    {% endif %}
    {% if product_views_count is defined and product_views_count %}
    <div onclick="rmSidebar('{{ oct_product_views }}', 'viewed');" class="oct-fixed-bar-item oct-fixed-bar-item-viewed" title="{{ oct_product_views }}">
        <img src="{{ base}}catalog/view/theme/oct_remarket/img/sprite.svg#include--fixed-bar-viewed" alt="{{ oct_product_views }}" width="24" height="24">
        <span class="oct-fixed-bar-quantity">{{ product_views_count }}</span>
    </div>
    {% endif %}
    {% if oct_bar_data.show_account is defined and oct_bar_data.show_account %}
        {% if account_link %}
        <a href="{{ account_link }}" class="oct-fixed-bar-item oct-fixed-bar-item-viewed" title="{{ text_account }}">
            <img src="{{ base}}catalog/view/theme/oct_remarket/img/sprite.svg#include--fixed-bar-account" alt="{{ text_account }}" width="20" height="22">
        </a>
        {% else %}
        <div onclick="octPopupLogin();" class="oct-fixed-bar-item oct-fixed-bar-item-viewed" title="{{ text_account }}">
            <img src="{{ base}}catalog/view/theme/oct_remarket/img/sprite.svg#include--fixed-bar-account" alt="{{ text_account }}" width="20" height="22">
        </div>
        {% endif %}
    {% endif %}
</div>
{% endif %}
{{ oct_mobile_sidebar }}
<div id="rm_sidebar" class="rm-sidebar">
    <div class="rm-sidebar-content">
        <div class="rm-sidebar-title d-flex alig-items-center justify-content-between">
            <span class="rm-sidebar-title-text">{{ oct_menu }}</span>
            <span class="rm-sidebar-title-close modal-close">
                <span aria-hidden="true" class="modal-close-icon modal-close-left"></span>
                <span aria-hidden="true" class="modal-close-icon modal-close-right"></span>
            </span>
