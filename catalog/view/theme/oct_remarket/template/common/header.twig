<!-- ========== SCRIPT TO FIX OVERLAY POSITION ========== -->
<script>
$(document).ready(function() {
    function octPositionMenu() {
        // Run only for desktop view (>= 992px)
        if ($(window).width() >= 992 && $('#rm_overlay').length && typeof $('#rm-menu') !== 'undefined' && $('#rm-menu') !== null) {
            var headerHeight = $('header').first().outerHeight(true) || 0;
            var navHeight = $('#top').first().outerHeight(true) || 0;
            var newTopPosition = headerHeight + navHeight;

            // Update the top position for the overlay and the mega menu
            $('#rm_overlay').css('top', newTopPosition + 'px');
            $('#rm-menu').css('top', newTopPosition + 'px');
            
            // Adjust overlay height to prevent scrolling the whole page
            $('#rm_overlay').css('height', 'calc(100vh - ' + newTopPosition + 'px)');

        } else {
            // Reset styles for mobile view
            $('#rm_overlay').css({ 'top': '', 'height': '' });
            if(typeof $('#rm-menu') !== 'undefined' && $('#rm-menu') !== null) {
                $('#rm-menu').css('top', '');
            }
        }
    }

    // Run on page load
    octPositionMenu();

    // Re-run on window resize
    $(window).on('resize', octPositionMenu);
});
</script>
<!-- ========== END OF SCRIPT ========== -->
